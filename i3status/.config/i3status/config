general {
        colors = true
        interval = 5
}

order += "wireless _first_"
order += "ethernet _first_"
order += "battery all"
order += "memory"
order += "tztime local"

wireless _first_ {
        format_up = "W: %essid"
        format_down = "W: down"
}

ethernet _first_ {
        format_up = "E: connected"
        format_down = "E: down"
}

battery all {
        format = "B: %percentage"
}

memory {
        format = "R: %used / %available"
        threshold_degraded = "1G"
        format_degraded = "MEMORY < %available"
}

tztime local {
        format = "%m-%d %H:%M"
}
